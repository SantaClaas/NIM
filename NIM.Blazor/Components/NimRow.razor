<div class="d-flex">
    @for (int i = 0; i <= Count; i++)
    {
        <img src="https://cdn.pixabay.com/photo/2016/10/05/19/08/match-1717377_960_720.png" width="200" height="200" />
    }
    <button class="btn btn-info" @onclick="Take">Take</button>
</div>
@code {

    [Parameter]
    public int Count { get; set; }

    void Take()
    {
        --Count;
        this.StateHasChanged();
    }


}
